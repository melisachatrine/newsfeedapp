<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/colorWindowBg</item>
    </style>


    <style name="TextViewHeadLines" >

        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="TextViewDetails" >

        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorDarkGray</item>


    </style>

    <style name="DefaultDialog.Fullscreen.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="DefaultDialog.Fullscreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ButtonPrimaryRound" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_primary_round</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ButtonLightRound" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_light_round</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
